{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",                   
    "moduleResolution": "node",            
    "rootDir": "./",                       
    "outDir": "./dist",                    

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"],
  
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
